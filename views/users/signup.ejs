<% layout('/layouts/boilerplate') %>

    <div class="row mt-3">
        <h1 class=" col-6 offset-3">SignUp on Wanderlust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate> 
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <!-- all the details are getting passed as an object now -->
                        <input  name="username"   
                        type="text" id="username" class="form-control" required>
                    </div>                
                    <div class="valid-feedback">Looks good!</div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <!-- all the details are getting passed as an object now -->
                        <input  name="email"   
                        type="email" id="email" class="form-control" required>
                    </div>     
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <!-- all the details are getting passed as an object now -->
                        <input  name="password"   
                        type="password" id="password" class="form-control" required>
                    </div> 
                    <button class="btn btn-success">SignUp</button>    
            </form>
        </div>
    </div>